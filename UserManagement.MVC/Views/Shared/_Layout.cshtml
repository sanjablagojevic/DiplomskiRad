<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HouseKeeping Servis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Font Awesome -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>

    <style>
        .footer {
            background-color: #518bdc !important;
            color: #F9F6F5 !important;
        }

        body {
            font-family: sans-serif;
        }
    </style>

</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60">
    <header>
        <nav class="navbar navbar-expand-md navbar-light" style=" background-color: #518bdc !important;">
            <div class="container-fluid">
                <a class="navbar-brand" style="color: #F9F6F5; margin-bottom:5px;" asp-area="" asp-controller="Home" asp-action="Index">HouseKeeping Servis</a>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1 me-auto mb-2 mb-lg-0">
                        @*<li class="nav-item">
                            <a style="color: #F9F6F5 !important;" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Početna</a>
                            </li>*@

                        <li class="nav-item">
                            <a style="color: #F9F6F5 !important;" class="nav-link" asp-area="" asp-controller="Utisaks" asp-action="Index">Reviews</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #F9F6F5 !important;" class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #F9F6F5 !important;" class="nav-link" asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #F9F6F5 !important;" class="nav-link" asp-area="" asp-controller="Blogs" asp-action="Index">Blog</a>
                        </li>
                        @if (User.IsInRole("Radnik"))
                        {
                            <li class="nav-item">
                                <a style="color: #F9F6F5 !important;" class="nav-link" asp-area="" asp-controller="Narudzbas" asp-action="Index">Bookings</a>
                            </li>
                        }
                        else if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a style="color: #F9F6F5 !important;" class="nav-link" asp-area="" asp-controller="Narudzbas" asp-action="Index">Bookings</a>
                            </li>
                            <li class="nav-item">
                                <a style="color: #F9F6F5 !important;" class="nav-link" asp-area="" asp-controller="Narudzbas" asp-action="PotvrdjeneNarudzbe">Confirmed bookings</a>
                            </li>
                        }
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item dropdown">
                                <a style="color: #F9F6F5 !important;" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Catalogs
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="Kategorijas">Categories</a>
                                    <a class="dropdown-item" href="Uslugas">Services</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a style="color: #F9F6F5 !important;" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Administration
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="UserRoles">Users</a>
                                    <a class="dropdown-item" href="RoleManager">Roles</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Basic"))
                        {
                            <li class="nav-item">
                                <a style="color: #F9F6F5 !important;" class="nav-link" asp-area="" asp-controller="Narudzbas" asp-action="MojeNarudzbe">Past bookings</a>
                            </li>
                        }
                        <li class="nav-item ml-auto">
                            <partial name="_LoginPartial.cshtml" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center text-lg-start" id="footer">
        <div class="container">
            <p style="color: #F9F6F5 !important">© Copyright 2021 - Sanja Blagojević - <a style="color: #F9F6F5 !important" asp-area="" asp-controller="Home" asp-action="Privacy">About</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>