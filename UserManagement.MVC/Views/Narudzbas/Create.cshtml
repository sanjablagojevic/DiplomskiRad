@model UserManagement.MVC.Models.Narudzba

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .center_div {
        margin: 0 auto;
        margin-top: 100px;
        width: 80% /* value of your choice which suits your alignment */
    }
    .input-group-text{
        background-color:white;
    }
</style>
<div class="container center_div">
    <form asp-action="Create">
        <div class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-12">
                <label asp-for="UslugaId" class="control-label"></label>
                <select asp-for="UslugaId" class="form-control" asp-items="ViewBag.UslugaId"></select>
            </div>
            @*<div class="form-group">
            <label asp-for="UserId" class="control-label"></label>
            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
        </div>*@
            <div class="form-group col-md-8">
                <label asp-for="AdresaNarudzbe" class="control-label"></label>
                <div class="input-group md-form form-control-sm form-2 pl-0 mb-5">
                    <input asp-for="AdresaNarudzbe" class="form-control" />
                    <span class="input-group-text">
                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="AdresaNarudzbe" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="BrojKvadrata" class="control-label"></label>
                <div class="input-group md-form form-control-sm form-2 pl-0 mb-5">
                    <input asp-for="BrojKvadrata" class="form-control" />
                    <span class="input-group-text">
                        <i class="fa fa-home" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="AdresaNarudzbe" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DatumNarudzbe" class="control-label"></label>
                <input type="date" asp-for="DatumNarudzbe" class="form-control" />
                <span asp-validation-for="DatumNarudzbe" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="VrijemePocetka" class="control-label"></label>
                <input type="time" asp-for="VrijemePocetka" class="form-control" />
                <span asp-validation-for="VrijemePocetka" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="EmailNarucioca" class="control-label"></label>
                <div class="input-group md-form form-control-sm form-2 pl-0 mb-5">
                    <input asp-for="EmailNarucioca" class="form-control" />
                    <span class="input-group-text">
                        <i class="fas fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="EmailNarucioca" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="BrojTelefonaNarucioca" class="control-label"></label>
                <div class="input-group md-form form-control-sm form-2 pl-0 mb-5">
                    <input asp-for="BrojTelefonaNarucioca" class="form-control" />
                    <span class="input-group-text">
                        <i class="fas fa-phone" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="BrojTelefonaNarucioca" class="text-danger"></span>
            </div>

            <div class="form-group col-md-12" style="display: flex;
                                    flex-wrap: wrap;
                                    justify-content: center;
                                    align-items: center;">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
