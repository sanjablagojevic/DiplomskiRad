@model UserManagement.MVC.Models.Usluga

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <hr />
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="KategorijaId" class="control-label font-weight-bold"></label>
                    <select asp-for="KategorijaId" class="form-control" asp-items="ViewBag.KategorijaId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CijenaUsluge" class="control-label font-weight-bold"></label>
                    <input asp-for="CijenaUsluge" class="form-control" />
                    <span asp-validation-for="CijenaUsluge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NazivUsluge" class="control-label font-weight-bold"></label>
                    <input asp-for="NazivUsluge" class="form-control" />
                    <span asp-validation-for="NazivUsluge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Nazad</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
