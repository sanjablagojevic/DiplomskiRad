@model UserManagement.MVC.Models.Usluga

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UslugaId" />
                <div class="form-group">
                    <label asp-for="KategorijaId" class="control-label"></label>
                    <select asp-for="KategorijaId" class="form-control" asp-items="ViewBag.KategorijaId"></select>
                    <span asp-validation-for="KategorijaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NazivUsluge" class="control-label"></label>
                    <input asp-for="NazivUsluge" class="form-control" />
                    <span asp-validation-for="NazivUsluge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CijenaUsluge" class="control-label"></label>
                    <input asp-for="CijenaUsluge" class="form-control" />
                    <span asp-validation-for="CijenaUsluge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sačuvaj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Nazad na listu</a>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
