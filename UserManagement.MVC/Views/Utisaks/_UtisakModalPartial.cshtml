@model UserManagement.MVC.Models.Utisak

<div class="modal fade" id="addUtisak">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addUtisakLabel">Dodaj utisak</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div class="form-group">
                        <label asp-for="Ocjena"></label>
                        <input asp-for="Ocjena" class="form-control" />
                        <span asp-validation-for="Ocjena" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Komentar"></label>
                        <input asp-for="Komentar" class="form-control" />
                        <span asp-validation-for="Komentar" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Otkaži</button>
                <button type="button" class="btn btn-primary" data-save="modal">Dodaj</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}